<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/theomen"
    android:layout_height="match_parent"
    tools:context="com.example.thanyani.myquizapp.Main2Activity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="26dp"
                android:textStyle="bold"
                android:paddingLeft="50dp"
                android:layout_marginBottom="12dp"
                android:text="CHOOSE A CATEGORY" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imageView4"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/imageView4"
                android:layout_marginLeft="42dp"
                android:layout_marginStart="0dp"
                android:text="QUESTIONS BASED ON PRESIDENCY"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="159dp"
                android:layout_height="130dp"
                android:layout_alignEnd="@+id/imageView6"
                android:layout_alignRight="@+id/imageView6"
                android:layout_below="@+id/textView11"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:cropToPadding="false"
                app:srcCompat="@drawable/local" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView4"
                android:layout_centerHorizontal="true"
                android:text="QUESTIONS BASED ON HOLIDAYS"
                android:textColor="#000000"
                android:layout_weight="0.88" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="169dp"
                android:layout_height="130dp"
                android:layout_alignLeft="@+id/imageView6"
                android:layout_alignStart="@+id/imageView6"
                android:layout_below="@+id/imageView4"

                app:srcCompat="@drawable/calen"
                android:layout_weight="0.32" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="312dp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView11"
                android:layout_alignRight="@+id/textView11"
                android:layout_below="@+id/imageView5"
                android:text="QUESTIONS BASED ON MATHS" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="164dp"
                android:layout_height="130dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textView14"
                app:srcCompat="@drawable/math" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:text="QUESTIONS BASED ON FRUITS AND VEGETABLES" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="164dp"
                android:layout_height="130dp"
                app:srcCompat="@drawable/veg" />

            <ImageView
                android:id="@+id/previous"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:src="@drawable/back"
                android:layout_below="@+id/imageView6"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
